---
import ArrowIcon from '../components/ArrowIcon';
import { getCollection } from 'astro:content';
const blogs = await getCollection('blogs');
---



<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Blogs</title>
	</head>
	<style>
		@font-face {
		font-family: "Futura";
		src: url('../assets/fonts/Futura.ttf');
		}
		@font-face {
		font-family: "Gotham";
		src: url('../assets/fonts/Gotham.ttf');
		}
	</style>
	<body class="bg-black">
		<ArrowIcon/>
		<h1 class="rounded-lg px-3 py-3 text-white text-6xl font-gotham animate-fade-in-text flex sm:justify-center space-x-4 tracking-wider">
		BLOGS
		</h1>
        <div class="text-white my-[25px] flex flex-col gap-12">
			<div class="flex items-center gap-3 py-5 px-10">
				{
					blogs.map((blog) => (
						<div class="flex flex-col gap-1">
							<a href={`/blogs/${blog.slug}`}>
							<h3 class="text-2xl hover:text-yellow-200">{blog.data.title}</h2>
							</a>
							<p class="text-sm">{new Date(blog.data.date).toLocaleDateString()}</p>
						</div>
					))
				}
                
			</div>
		</div>
	</body>
</html>