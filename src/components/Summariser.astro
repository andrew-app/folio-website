<style>
    #summariser-btn {
        anchor-name: --buttonAnchor;
    }

    #summariser-btn > svg:hover {
        fill: rgb(254 240 138);
    }

    #ai-summary:popover-open {
        width: 300px;
        max-height: 250px;
        position-anchor: --buttonAnchor;
        position: fixed;
        top: anchor(bottom);
        left: anchor(left);
        margin-top: 8px;
        right: auto;
        translate: -50% 0;
    }
    #ai-summary {
        background-color: rgb(0, 0, 0);
        color: rgb(255, 255, 255);
        text-align: left;
        border: 1px solid rgb(255, 255, 255);
        border-radius: 8px;
    }
</style>

<script>
    const summaryButton = document.getElementById('summariser-btn');
    try {
        // @ts-ignore
        if (Summarizer) {
            console.log('Summarizer API is available');
        }
    }
    catch (error) {
        console.error('Summarizer is not available:', error);
        summaryButton?.remove();
    }
    
    const options = {
                sharedContext:"A general summary to help a user decide if the text is worth reading",
                type: "tldr",
                length: "short",
                format: "markdown"
        };
    
    
    const blogContent = document.getElementById('blog-content');
    const summaryContent = document.getElementById('summary-content');
    let summary: string | null = null;
    let isLoading = false;
    summaryButton?.addEventListener('click', async () => {
        //@ts-ignore
        const availability = await Summarizer.availability();
        let summarizer;
        
        if (availability === 'unavailable') {
            console.error('Summarizer API is unavailable');
            // The Summarizer API isn't usable.
            return;
        }
        if (availability === 'available') {
            //@ts-ignore
            summarizer = await Summarizer.create(options);
        } else {
            // The Summarizer API can be used after the model is downloaded.
            //@ts-ignore
            summarizer = await Summarizer.create(options);
            summarizer.addEventListener('downloadprogress', (e: any) => {
                console.log(`Downloaded ${e.loaded * 100}%`);
            });
            await summarizer.ready;
        }
        if (!summary && !isLoading) {
            isLoading = true;
            summary = await summarizer.summarize(blogContent?.innerText);
        }
        isLoading = false;
        document.getElementById('skeleton')!.remove();
        summaryContent!.innerHTML = `${summary ? summary : 'No TLDR available.'}`;
    });

</script>
